#news
  - unless params[:category].nil?
    .callout.small.warning
      Alle Einträge der Kategorie:
      %span.title.label.secondary
        = icon 'th-list'
        = @category.title

  - @news.each do |news|
    .teaser
      = render partial: 'teaser', locals: {news: news}

  .pageination
    = will_paginate @news, renderer: FoundationPagination::Rails, previous_label: "Zurück", next_label: "Weiter"

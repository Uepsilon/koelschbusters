#news
  - unless params[:category].nil?
    .alert.alert-warning
      Alle Einträge der Kategorie
      %b= @category.title

  - @news.each do |news|
    .teaser
      = render partial: 'teaser', locals: {news: news}

  .pageination
    = will_paginate @news, renderer: BootstrapPagination::Rails, previous_label: "Zurück", next_label: "Weiter"
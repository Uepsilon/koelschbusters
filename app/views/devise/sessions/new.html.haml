#session.login
  .well
    %h2.title Einloggen
    = form_for resource, as: resource_name, url: session_path(resource_name), html: {class: "form-horizontal"} do |f|
      .form-group
        = f.label :email, class: "col-sm-2  control-label"
        .col-sm-10= f.email_field :email, autofocus: true, class: "form-control", placeholder: "E-Mail Adresse"
      .form-group
        = f.label :password, class: "col-sm-2  control-label"
        .col-sm-10= f.password_field :password, class: "form-control", placeholder: "Password"
      .form-group
        .col-sm-offset-2.col-sm-10
          .checkbox
            %label
              = f.check_box(:remember_me)
              Eingeloggt bleiben
      .form-group
        .col-sm-offset-2.col-sm-10
          = f.submit "Einloggen", class: "btn btn-default"
          = link_to "Passwort vergessen?", new_password_path(resource_name), class: "btn btn-default"
  .well
    %h2.title Alternative Loginm√∂glichkeiten
    - resource_class.omniauth_providers.each do |provider|
      %span{class: provider}
        = link_to image_tag("#{provider}_icon.png", alt: "Einloggen mit #{provider.capitalize}", class: :thumb), omniauth_authorize_path(resource_name, provider), class: "#{provider}-login"
    %br.clear

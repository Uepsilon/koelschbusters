#session.login
  .well
    %h2.title Einloggen
    = form_for resource, as: resource_name, url: session_path(resource_name) do |f|
      .row
        .small-12.columns= f.email_field :email, autofocus: true, placeholder: "E-Mail Adresse"
      .row
        .small-12.columns= f.password_field :password, placeholder: "Password"
      .row
        .small-4.medium-2.columns.text-align-right
          .switch.small
            = f.check_box :remember_me, class: 'switch-input'
            %label.switch-paddle{ for: :user_remember_me }
        .columns
          %label{ for: :user_remember_me } Eingeloggt bleiben

      .row
        .large-12.columns.show-for-large
          = f.submit t('links.login'), class: "button"
          = link_to t('links.forgot_password'), new_password_path(resource_name), class: "button warning"
        .small-12.columns.hide-for-large
          = f.submit t('links.login'), class: "button expanded"
        .small-12.columns.hide-for-large
          = link_to t('links.forgot_password'), new_password_path(resource_name), class: "button warning expanded"
  .well
    %h2.title Alternative Loginm√∂glichkeiten
    - resource_class.omniauth_providers.each do |provider|
      %span{class: provider}
        = link_to image_tag("#{provider}.png", alt: "Einloggen mit #{provider.capitalize}"), omniauth_authorize_path(resource_name, provider), class: "#{provider}-login"
    %br.clear

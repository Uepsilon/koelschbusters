= form_for [:admin, @event], html: { class: "form-horizontal" } do |f|
  - if @event.errors.any?
    .alert.alert-danger
      %ul
      - @event.errors.full_messages.each do |msg|
        %li= msg

  .form-group
    = f.label :title, class: "col-lg-2 control-label"
    .col-lg-10
      = f.text_field :title, placeholder: Event.human_attribute_name(:title), class: "form-control"

  .form-group
    = f.label :description, class: "col-lg-2 control-label"
    .col-lg-10
      = f.text_area :description, placeholder: Event.human_attribute_name(:description), class: "form-control"

  .form-group
    = f.label :location, class: "col-lg-2 control-label"
    .col-lg-10
      = f.text_field :location, placeholder: Event.human_attribute_name(:location), class: "form-control"

  .form-group
    = f.label :starts_at, class: "col-lg-2 control-label"
    .col-lg-10
      = f.text_field :starts_at, placeholder: Event.human_attribute_name(:starts_at), class: "form-control"
  .form-group
    = f.label :ends_at, class: "col-lg-2 control-label"
    .col-lg-10
      = f.text_field :ends_at, placeholder: Event.human_attribute_name(:ends_at), class: "form-control"
  .form-group
    .col-lg-10.pull-right
      - if @event.new_record?
        = f.submit t('links.create'), class: 'btn btn-success'
      - else
        = f.submit t('links.save'), class: 'btn btn-success'
      = link_to t('links.cancel'), :admin_events, class: 'btn btn-warning'

= form_for [:admin, @news], html: { class: 'form-horizontal'} do |f|
  - if @news.errors.any?
    .alert.alert-danger
      %ul
      - @news.errors.full_messages.each do |msg|
        %li= msg

  .form-group
    = f.label :title, class: "col-lg-2 control-label"
    .col-lg-10
      = f.text_field :title, placeholder: News.human_attribute_name(:title), class: "form-control"

  .form-group
    = f.label :body, class: "col-lg-2 control-label"
    .col-lg-10
      = f.text_area :body, class: "form-control ckeditor"

  .form-group
    = f.label :internal, class: "col-lg-2 control-label"
    .col-lg-10
      = f.check_box :internal

  .form-group
    = f.label :category_id, News.human_attribute_name(:category), class: "col-lg-2 control-label"
    .col-lg-10
      = f.select :category_id, Category.all.map{|cat| [cat.title, cat.id]}, {prompt: "Kategorie w√§hlen", include_blank: "Keine Kategorie"}, class: "form-control"

  .form-group
    .col-lg-10.pull-right
      - if @news.new_record?
        = f.submit t('links.create'), class: 'btn btn-success'
      - else
        = f.submit t('links.update'), class: 'btn btn-info'
      = link_to t('links.cancel'), :admin_news_index, class: 'btn btn-warning'

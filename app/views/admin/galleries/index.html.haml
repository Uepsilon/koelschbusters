#galleries
  %table
    %thead
      %tr
        %th ID
        %th Titel
        %th Bilder
        %th Öffentliche Bilder
        %th{:colspan => 3} Optionen
    %tbody
      - @galleries.each do |gallery|
        %tr
          %td= gallery.id
          %td= gallery.title
          %td= gallery.pictures.count
          %td= gallery.public_pictures.count
          %td= link_to "Bearbeiten", [:edit, :admin, gallery]
          %td= link_to "Löschen", [:admin, gallery], :method => :delete, :confirm => "Sind Sie sicher?"
          %td= link_to "Bilder verwalten", [:admin, gallery, :pictures]


  = link_to "Anlegen", :new_admin_gallery
= form_for [:admin, @gallery], html: { class: "form-horizontal" } do |f|
  - if @gallery.errors.any?
    .alert.alert-error
      %ul
      - @gallery.errors.full_messages.each do |msg|
        %li= msg

  .form-group
    = f.label :title, class: "col-lg-2 control-label"
    .col-lg-10
      .input= f.text_field :title, placeholder: Gallery.human_attribute_name(:title), class: "form-control"

  .form-group
    .col-lg-10.pull-right
      - if @gallery.new_record?
        = f.submit t('links.create'), class: 'btn btn-success'
      - else
        = f.submit t('links.update'), class: 'btn btn-info'
      = link_to t('links.cancel'), :admin_galleries, class: 'btn btn-warning'
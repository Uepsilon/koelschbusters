#pages
  .row
    - if can? :manage, User
      .col-xm-12.col-md-6
        .panel.panel-default
          .panel-heading Benutzer
          .panel-body Benutzer anlegen, ändern und löschen
          .panel-body
            = link_to t('links.index'), :admin_users, class: "btn btn-primary btn-sm"
            = link_to t('links.create'), :new_admin_user, class: "btn btn-success btn-sm"
    - if can? :manage, Category
      .col-xm-12.col-md-6
        .panel.panel-default
          .panel-heading Kategorien
          .panel-body Kategorien erstellen, editieren und löschen
          .panel-body
            = link_to t('links.index'), :admin_categories, class: "btn btn-primary btn-sm"
            = link_to t('links.create'), :new_admin_category, class: "btn btn-success btn-sm"

    - if can? :manage, News
      .col-xm-12.col-md-6
        .panel.panel-default
          .panel-heading Nachrichten
          .panel-body Nachrichten erstellen, editieren und löschen
          .panel-body
            = link_to t('links.index'), :admin_news_index, class: "btn btn-primary btn-sm"
            = link_to t('links.create'), :new_admin_news, class: "btn btn-success btn-sm"

    - if can? :manage, Gallery
      .col-xm-12.col-md-6
        .panel.panel-default
          .panel-heading Galerien
          .panel-body Galerien erstellen und Bilder hochladen
          .panel-body
            = link_to t('links.index'), :admin_galleries, class: "btn btn-primary btn-sm"
            = link_to t('links.create'), :new_admin_gallery, class: "btn btn-success btn-sm"

    - if can? :manage, Event
      .col-xm-12.col-md-6
        .panel.panel-default
          .panel-heading= Event.model_name.human count: 2
          .panel-body= "#{Event.model_name.human count: 2} verwalten"
          .panel-body
            = link_to t('links.index'), :admin_events, class: "btn btn-primary btn-sm"
            = link_to t('links.create'), :new_admin_event, class: "btn btn-success btn-sm"

    - if can? :manage, Comment
      .col-xm-12.col-md-6
        .panel.panel-default
          .panel-heading= Comment.model_name.human count: 2
          .panel-body= "#{Comment.model_name.human count: 2} verwalten"
          .panel-body
            = link_to t('links.index'), :admin_comments, class: "btn btn-primary btn-sm"

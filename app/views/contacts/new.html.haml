#news
  .well
    %h2.title Kontakt
    %p
      Wenn Sie eine Frage oder ein anderes Anliegen haben, können Sie uns über dieses Formular eine Nachricht zukommen lassen.
    = form_for @contact, url: contact_path, html: { class: "form-horizontal" } do |f|
      - if @contact.errors.any?
        .callout.alert.small{ 'data-abide-error' => true }
          %h5
            %span.is-invalid-label
              = icon 'exclamation-triangle'
            Bitte korrigieren Sie folgende Felder:
          %ul
            - @contact.errors.full_messages.each do |msg|
              %li= msg

      .row
        .small-12.columns
          = f.text_field :name, placeholder: t('contact.name')

      .row
        .small-12.columns
          = f.text_field :email, placeholder: "#{t('contact.email')} (optional)"

      .row
        .small-12.columns
          = f.text_field :subject, placeholder: "#{t('contact.subject')} (optional)"

      .row
        .small-12.columns
          = f.text_area :text, placeholder: t('contact.text'), rows: 5

      .row
        .large-12.columns.show-for-large
          = f.submit t('links.contact.send'), class: 'button'
          = link_to t('links.cancel'), :contact, class: 'button warning'
        .small-12.medium-6.columns.hide-for-large
          = f.submit t('links.contact.send'), class: 'button expanded'
        .small-12.medium-6.columns.hide-for-large
          = link_to t('links.cancel'), :contact, class: 'button warning expanded'

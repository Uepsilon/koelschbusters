#gallery
  .well
    %h2.title= @gallery.title
    .pictures
      - @pictures.each do |picture|
        %span.picture
          = link_to image_tag(picture.picture.url(:thumb), class: "img-rounded"), picture.picture.url, class: "gallery-picture", rel: "gallery"

    %br.clear
    = link_to "Zurück zur Übersicht", :galleries, class: "btn btn-danger pull-right"
    %br.clear

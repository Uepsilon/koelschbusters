.navbar.navbar-inverse.navbar-fixed-top
  .container
    .navbar-header
      %a.btn.btn-default.navbar-toggle(data-target=".navbar-collapse" data-toggle="collapse")
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      %a.navbar-brand(href="#") Koelschbusters
    .collapse.navbar-collapse
      %ul.nav.navbar-nav
        %li= link_to t('links.general.root'), :root
        %li= link_to t('links.general.pictures'), :galleries

      %ul.nav.navbar-nav.pull-right
        - if user_signed_in?
          %li= link_to t('links.general.profile'), current_user
          %li= link_to t('links.general.logout'), :destroy_user_session, method: :delete
        - else
          %li= link_to t('links.general.login'), :new_user_session
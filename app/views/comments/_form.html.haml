= form_for [@news, @comment], html: { class: "form-horizontal" } do |f|
  - if @comment.errors.any?
    .alert.alert-danger
      %ul
      - @comment.errors.full_messages.each do |msg|
        %li= msg

  - unless user_signed_in?
    .form-group
      = f.label :username, class: "col-lg-2 control-label"
      .col-lg-10
        = f.text_field :username, placeholder: Comment.human_attribute_name(:username), class: "form-control"

  .form-group
    = f.label :body, class: "col-lg-2 control-label"
    .col-lg-10
      = f.text_area :body, placeholder: Comment.human_attribute_name(:body), class: "form-control", rows: 3

  .form-group
    .col-lg-10.pull-right
      - if @comment.new_record?
        = f.submit t('links.create'), class: 'btn btn-success'
      - else
        = f.submit t('links.update'), class: 'btn btn-info'
      = link_to t('links.cancel'), @comment.news, class: 'btn btn-warning'
